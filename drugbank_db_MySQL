CREATE DATABASE drugbank_db;

use drugbank_db;


-- Table for core drug information
CREATE TABLE drugs (
    drug_id INT AUTO_INCREMENT PRIMARY KEY,
    drugbank_id VARCHAR(255) UNIQUE,
    drug_name VARCHAR(255),
    drug_description TEXT,
    cas_number VARCHAR(255),
    unii VARCHAR(255),
    state VARCHAR(50)
);

-- Table for drug interactions
CREATE TABLE drug_interactions (
    interaction_id INT AUTO_INCREMENT PRIMARY KEY,
    drug_id INT,
    interacting_drugbank_id VARCHAR(255),
    interacting_drug_name VARCHAR(255),
    interaction_description TEXT,
    FOREIGN KEY (drug_id) REFERENCES drugs(drug_id)
);

-- Table for dosage information
CREATE TABLE dosages (
    dosage_id INT AUTO_INCREMENT PRIMARY KEY,
    drug_id INT,
    dosage_form VARCHAR(255),
    route VARCHAR(255),
    strength VARCHAR(255),
    FOREIGN KEY (drug_id) REFERENCES drugs(drug_id)
);

-- Table for categories
CREATE TABLE categories (
    category_id INT AUTO_INCREMENT PRIMARY KEY,
    drug_id INT,
    category VARCHAR(255),
    mesh_id VARCHAR(255),
    FOREIGN KEY (drug_id) REFERENCES drugs(drug_id)
);

-- Table for food interactions
CREATE TABLE food_interactions (
    food_interaction_id INT AUTO_INCREMENT PRIMARY KEY,
    drug_id INT,
    interaction_description TEXT,
    FOREIGN KEY (drug_id) REFERENCES drugs(drug_id)
);

-- Table for drug references
CREATE TABLE drug_references (
    reference_id INT AUTO_INCREMENT PRIMARY KEY,
    drug_id INT,
    pubmed_id VARCHAR(255),
    citation TEXT,
    FOREIGN KEY (drug_id) REFERENCES drugs(drug_id)
);
