<script>
// Enhanced User Type Selection
function selectUserType(element, type) {
  document.querySelectorAll('.user-type-card').forEach(card => {
    card.classList.remove('selected');
  });
  element.classList.add('selected');
  // Add user type to form data
}

// Dynamic Password Strength
document.getElementById('password').addEventListener('input', function(e) {
  const strength = calculatePasswordStrength(e.target.value);
  document.querySelector('.strength-bar').style.width = `${strength}%`;
});

function calculatePasswordStrength(password) {
  let strength = 0;
  if (password.length >= 8) strength += 30;
  if (password.match(/[A-Z]/)) strength += 20;
  if (password.match(/[0-9]/)) strength += 20;
  if (password.match(/[^A-Za-z0-9]/)) strength += 30;
  return Math.min(strength, 100);
}

// Animated Form Toggle
document.getElementById('toggleSignUp').addEventListener('click', (e) => {
  e.preventDefault();
  const form = document.getElementById('loginForm');
  form.classList.add('fade-out');
  
  setTimeout(() => {
    form.innerHTML = `
      <div class="input-group">
        <input type="text" id="name" placeholder=" " required>
        <label class="floating-label">Full Name</label>
      </div>
      <div class="input-group">
        <input type="email" id="email" placeholder=" " required>
        <label class="floating-label">Professional Email</label>
      </div>
      <div class="input-group">
        <input type="password" id="password" placeholder=" " required>
        <label class="floating-label">Create Password</label>
        <div class="password-strength">
          <div class="strength-bar"></div>
        </div>
      </div>
      <div class="error-message" id="errorMessage"></div>
      <button type="submit">
        <span class="button-text">Create Secure Account</span>
        <div class="loading-spinner"></div>
      </button>
    `;
    form.classList.remove('fade-out');
    document.querySelector('.toggle-form').innerHTML = 
      'Already registered? <a id="toggleSignIn" href="#">Access Secure Portal</a>';
  }, 300);
});

// Add loading state
document.querySelector('form').addEventListener('submit', function() {
  this.querySelector('.button-text').style.display = 'none';
  this.querySelector('.loading-spinner').style.display = 'block';
});

// Rest of Firebase logic remains similar but with additional user type handling
</script>
</body>
