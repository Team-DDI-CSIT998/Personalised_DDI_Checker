    <main>
      <div class="hero">
        <h2>AI-Powered DDI Checker</h2>
        <p>Type the medicine name (min. 3 letters) and select from the suggestions below. Then click “Analyze Interactions” to check for potential drug interactions.</p>
      </div>
      
      <div class="ddi-container">
        <!-- Input & Dropdown -->
        <div class="input-container">
          <input type="text" id="medicine-input" placeholder="Type medicine name..." autocomplete="off" />
          <div id="suggestion-list"></div>
        </div>
        <!-- Display selected medicines -->
        <div id="selected-medicines"></div>
        <!-- Action Buttons -->
        <div class="buttons">
          <button id="analyzeBtn" class="btn">Analyze Interactions</button>
          <button id="clearBtn" class="btn clear">Clear All</button>
        </div>
        <!-- Results Section (hidden until analysis) -->
        <div id="results" style="display: none;">
          <h3>Interaction Results</h3>
          <p id="resultsText"></p>
        </div>
      </div>
    </main>
    
    <script>
      // Dummy list of available medicines (simulate database)
      const availableMedicines = [
        "Aspirin",
        "Ibuprofen",
        "Acetaminophen",
        "Metformin",
        "Lisinopril",
        "Amoxicillin",
        "Azithromycin",
        "Simvastatin",
        "Omeprazole"
      ];
      
      // DOM Elements
      const inputField = document.getElementById("medicine-input");
      const suggestionList = document.getElementById("suggestion-list");
      const selectedMedicinesContainer = document.getElementById("selected-medicines");
      const analyzeBtn = document.getElementById("analyzeBtn");
      const clearBtn = document.getElementById("clearBtn");
      const resultsDiv = document.getElementById("results");
      const resultsText = document.getElementById("resultsText");
      
      // Event: Show suggestions when typing
      inputField.addEventListener("input", function() {
        const query = inputField.value.trim().toLowerCase();
        if (query.length < 3) {
          clearSuggestions();
          return;
        }
        const suggestions = availableMedicines.filter(med => med.toLowerCase().includes(query));
        displaySuggestions(suggestions);
      });
      
      // Display suggestion items
      function displaySuggestions(suggestions) {
        suggestionList.innerHTML = "";
        if (suggestions.length === 0) {
          const noDiv = document.createElement("div");
          noDiv.className = "suggestion-item no-medicine";
          noDiv.textContent = "No medicines found";
          suggestionList.appendChild(noDiv);
          suggestionList.style.display = "block";
          return;
        }
        suggestions.forEach(suggestion => {
          const div = document.createElement("div");
          div.className = "suggestion-item";
          div.textContent = suggestion;
          div.addEventListener("click", function() {
            addMedicine(suggestion);
            clearSuggestions();
            inputField.value = "";
          });
          suggestionList.appendChild(div);
        });
        suggestionList.style.display = "block";
      }
      
      // Clear suggestions dropdown
      function clearSuggestions() {
        suggestionList.innerHTML = "";
        suggestionList.style.display = "none";
      }
      
      // Add medicine pill (if not already added)
      function addMedicine(medicine) {
        // Prevent duplicates
        const existingPills = document.querySelectorAll(".medicine-pill");
        for (let pill of existingPills) {
          if (pill.firstChild.textContent.trim().toLowerCase() === medicine.toLowerCase()) {
            return; // already exists
          }
        }
        const pill = document.createElement("span");
        pill.className = "medicine-pill";
        pill.textContent = medicine;
        
        // Remove button for pill
        const removeBtn = document.createElement("button");
        removeBtn.className = "remove-pill";
        removeBtn.textContent = "×";
        removeBtn.addEventListener("click", function() {
          selectedMedicinesContainer.removeChild(pill);
        });
        pill.appendChild(removeBtn);
        selectedMedicinesContainer.appendChild(pill);
      }
      
      // Analyze Interactions button click
      analyzeBtn.addEventListener("click", function() {
        const pills = document.querySelectorAll(".medicine-pill");
        if (pills.length === 0) {
          alert("Please add at least one medicine before analyzing interactions.");
          return;
        }
        // Gather selected medicines
        let medicines = [];
        pills.forEach(pill => {
          // The pill's first child (text node) is the medicine name
          medicines.push(pill.firstChild.textContent.trim());
        });
        // Simulate processing (you could add a spinner here)
        resultsDiv.style.display = "block";
        resultsText.textContent = "Analyzing interactions for: " + medicines.join(", ") + " ...";
        // Simulate an async operation (for now, just a timeout)
        setTimeout(() => {
          // Here you could update with actual results from your analysis logic.
          resultsText.textContent = "No significant interactions found among the selected medicines.";
        }, 1500);
      });
      
      // Clear All button click
      clearBtn.addEventListener("click", function() {
        selectedMedicinesContainer.innerHTML = "";
        resultsDiv.style.display = "none";
      });
    </script>
  </body>
